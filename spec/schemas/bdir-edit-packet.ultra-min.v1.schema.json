{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/bdir-edit-packet.ultra-min.v1.schema.json",
  "title": "BDIR Edit Packet (Ultra Minimal) v1",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$comment": "Hash encoding: lowercase hex. Truncation allowed as a prefix, but MUST be >= 8 hex chars (RFC-0001 ยง5.1.4, ยง6.3).",
      "properties": {
        "h": {
          "pattern": "^[0-9a-f]+$",
          "maxLength": 128
        },
        "b": {
          "items": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "prefixItems": [
              {},
              {},
              {
                "type": "string",
                "minLength": 8,
                "maxLength": 128,
                "pattern": "^[0-9a-f]+$"
              },
              {}
            ]
          }
        }
      }
    },
    {
      "$comment": "If ha is omitted, receivers MUST default it to sha256. Schema enforces sha256-length bounds when ha is absent (RFC-0001 ยง6.3).",
      "if": {
        "not": {
          "required": ["ha"]
        }
      },
      "then": {
        "properties": {
          "h": {
            "maxLength": 64
          },
          "b": {
            "items": {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "prefixItems": [
                {},
                {},
                {
                  "type": "string",
                  "minLength": 8,
                  "maxLength": 64,
                  "pattern": "^[0-9a-f]+$"
                },
                {}
              ]
            }
          }
        }
      }
    },
    {
      "$comment": "Known algorithm bounds (non-exhaustive). For unrecognized algorithms, generic bounds apply.",
      "if": {
        "required": ["ha"],
        "properties": {
          "ha": {"const": "sha256"}
        }
      },
      "then": {
        "properties": {
          "h": {
            "maxLength": 64
          },
          "b": {
            "items": {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "prefixItems": [
                {},
                {},
                {
                  "type": "string",
                  "minLength": 8,
                  "maxLength": 64,
                  "pattern": "^[0-9a-f]+$"
                },
                {}
              ]
            }
          }
        }
      }
    },
    {
      "$comment": "xxh64 is commonly used for token-minimized packets. Full digest is 16 hex chars; truncated prefixes are allowed >= 8.",
      "if": {
        "required": ["ha"],
        "properties": {
          "ha": {"const": "xxh64"}
        }
      },
      "then": {
        "properties": {
          "h": {
            "maxLength": 16
          },
          "b": {
            "items": {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "prefixItems": [
                {},
                {},
                {
                  "type": "string",
                  "minLength": 8,
                  "maxLength": 16,
                  "pattern": "^[0-9a-f]+$"
                },
                {}
              ]
            }
          }
        }
      }
    }
  ],
  "required": [
    "v",
    "h",
    "b"
  ],
  "properties": {
    "v": {
      "type": "integer",
      "const": 1,
      "description": "Edit Packet version. This schema defines version 1."
    },
    "tid": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Optional trace identifier to associate the packet with external metadata."
    },
    "h": {
      "type": "string",
      "minLength": 8,
      "description": "Page-level content hash, computed using the algorithm specified by ha (or the default baseline when ha is omitted). Hashes are lowercase hex; values MAY be truncated prefixes but MUST be >= 8 hex chars."
    },
    "ha": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32,
      "description": "Hash algorithm identifier for h and block text_hash values. Implementations MUST support \"sha256\" as a baseline; other values are allowed for extensibility.",
      "default": "sha256"
    },
    "b": {
      "type": "array",
      "minItems": 1,
      "description": "Blocks in reading order as tuples: [block_id, kind_code, text_hash, text].",
      "items": {
        "$ref": "#/$defs/blockTuple"
      }
    }
  },
  "$defs": {
    "kind_code": {
      "description": "Block importance code. Ranges: 0\u201319 core, 20\u201339 boilerplate/nav, 40\u201359 UI chrome, 99 unknown.",
      "anyOf": [
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 59
        },
        {
          "type": "integer",
          "const": 99
        }
      ]
    },
    "block_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Stable block identifier."
    },
    "text_hash": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "pattern": "^[0-9a-f]+$",
      "description": "Hash of the block text, computed using the algorithm specified by ha (or the default baseline when ha is omitted). Hashes are lowercase hex; values MAY be truncated prefixes but MUST be >= 8 hex chars."
    },
    "blockText": {
      "type": "string",
      "description": "Canonical block text (commonly Markdown)."
    },
    "blockTuple": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "prefixItems": [
        {
          "$ref": "#/$defs/block_id"
        },
        {
          "$ref": "#/$defs/kind_code"
        },
        {
          "$ref": "#/$defs/text_hash"
        },
        {
          "$ref": "#/$defs/blockText"
        }
      ]
    }
  }
}
