{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/bdir/patch.v1.schema.json",
  "title": "BDIR Patch v1",
  "description": "Normative schema for BDIR Patch Protocol v1 (RFC-0001).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "v",
    "h",
    "ops"
  ],
  "properties": {
    "v": {
      "type": "integer",
      "const": 1,
      "description": "Patch protocol version."
    },
    "h": {
      "type": "string",
      "minLength": 1,
      "description": "Page-level content hash binding."
    },
    "ha": {
      "type": "string",
      "minLength": 1,
      "default": "sha256",
      "description": "Hash algorithm identifier (defaults to sha256)."
    },
    "ops": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/$defs/operation"
      }
    }
  },
  "$defs": {
    "block_id": {
      "type": "string",
      "minLength": 1
    },
    "kind_code": {
      "type": "integer",
      "minimum": 0,
      "maximum": 99
    },
    "operation": {
      "type": "object",
      "required": [
        "op"
      ],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "replace",
            "delete",
            "insert_after",
            "suggest"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "op": {
                "const": "replace"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "before",
              "after"
            ],
            "properties": {
              "op": {
                "const": "replace"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "before": {
                "type": "string",
                "minLength": 1
              },
              "after": {
                "type": "string"
              },
              "occurrence": {
                "type": "integer",
                "minimum": 1
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "delete"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "before"
            ],
            "properties": {
              "op": {
                "const": "delete"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "before": {
                "type": "string",
                "minLength": 1
              },
              "occurrence": {
                "type": "integer",
                "minimum": 1
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "insert_after"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "new_block_id",
              "kind_code",
              "text"
            ],
            "properties": {
              "op": {
                "const": "insert_after"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "new_block_id": {
                "$ref": "#/$defs/block_id"
              },
              "newBlockId": {
                "$ref": "#/$defs/block_id"
              },
              "kind_code": {
                "$ref": "#/$defs/kind_code"
              },
              "kindCode": {
                "$ref": "#/$defs/kind_code"
              },
              "text": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            },
            "not": {
              "anyOf": [
                {
                  "required": [
                    "before"
                  ]
                },
                {
                  "required": [
                    "after"
                  ]
                }
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "insert_before"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "new_block_id",
              "kind_code",
              "text"
            ],
            "properties": {
              "op": {
                "const": "insert_before"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "new_block_id": {
                "$ref": "#/$defs/block_id"
              },
              "newBlockId": {
                "$ref": "#/$defs/block_id"
              },
              "kind_code": {
                "$ref": "#/$defs/kind_code"
              },
              "kindCode": {
                "$ref": "#/$defs/kind_code"
              },
              "text": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            },
            "not": {
              "anyOf": [
                {
                  "required": [
                    "before"
                  ]
                },
                {
                  "required": [
                    "after"
                  ]
                }
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "replace_block"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "text"
            ],
            "properties": {
              "op": {
                "const": "replace_block"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "text": {
                "type": "string",
                "minLength": 1
              },
              "kind_code": {
                "$ref": "#/$defs/kind_code"
              },
              "kindCode": {
                "$ref": "#/$defs/kind_code"
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            },
            "not": {
              "anyOf": [
                {
                  "required": [
                    "before"
                  ]
                },
                {
                  "required": [
                    "after"
                  ]
                },
                {
                  "required": [
                    "occurrence"
                  ]
                },
                {
                  "required": [
                    "new_block_id"
                  ]
                },
                {
                  "required": [
                    "newBlockId"
                  ]
                }
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "delete_block"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id"
            ],
            "properties": {
              "op": {
                "const": "delete_block"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            },
            "not": {
              "anyOf": [
                {
                  "required": [
                    "before"
                  ]
                },
                {
                  "required": [
                    "after"
                  ]
                },
                {
                  "required": [
                    "occurrence"
                  ]
                },
                {
                  "required": [
                    "new_block_id"
                  ]
                },
                {
                  "required": [
                    "newBlockId"
                  ]
                },
                {
                  "required": [
                    "kind_code"
                  ]
                },
                {
                  "required": [
                    "kindCode"
                  ]
                },
                {
                  "required": [
                    "text"
                  ]
                },
                {
                  "required": [
                    "content"
                  ]
                },
                {
                  "required": [
                    "message"
                  ]
                },
                {
                  "required": [
                    "severity"
                  ]
                }
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "suggest"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "op",
              "block_id",
              "message"
            ],
            "properties": {
              "op": {
                "const": "suggest"
              },
              "block_id": {
                "$ref": "#/$defs/block_id"
              },
              "blockId": {
                "$ref": "#/$defs/block_id"
              },
              "message": {
                "type": "string",
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high"
                ]
              },
              "rationale": {
                "type": "string",
                "minLength": 1
              }
            },
            "not": {
              "anyOf": [
                {
                  "required": [
                    "before"
                  ]
                },
                {
                  "required": [
                    "after"
                  ]
                }
              ]
            }
          }
        }
      ],
      "unevaluatedProperties": false
    }
  }
}
