{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/ai-patch.schema.json",
  "title": "BDIR AI Patch Schema v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "v",
    "h",
    "ops"
  ],
  "properties": {
    "v": {
      "type": "integer",
      "const": 1,
      "description": "Patch schema version."
    },
    "h": {
      "type": "string",
      "minLength": 8,
      "description": "Page-level content hash binding for this patch. MUST equal the Edit Packet 'h' the patch was derived from, computed using 'ha' (or the default baseline when 'ha' is omitted)."
    },
    "ha": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32,
      "description": "Hash algorithm identifier for 'h'. Implementations MUST support \"sha256\" as a baseline; other values are allowed for extensibility.",
      "default": "sha256"
    },
    "ops": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered list of patch operations.",
      "items": {
        "$ref": "#/$defs/op"
      }
    }
  },
  "$defs": {
    "block_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "beforeText": {
      "type": "string",
      "minLength": 1
    },
    "afterText": {
      "type": "string"
    },
    "kind_code": {
      "type": "integer",
      "minimum": 0,
      "maximum": 99
    },
    "occurrence": {
      "type": "integer",
      "minimum": 1,
      "description": "1-indexed selector for disambiguating multiple matches of 'before' within a block. If omitted, receivers SHOULD reject when 'before' matches more than once."
    },
    "op": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op",
        "block_id"
      ],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "replace",
            "delete",
            "insert_after",
            "suggest"
          ],
          "description": "Patch operation type."
        },
        "block_id": {
          "$ref": "#/$defs/block_id",
          "description": "Target block identifier."
        },
        "before": {
          "$ref": "#/$defs/beforeText",
          "description": "Exact substring expected to exist in the target block."
        },
        "after": {
          "$ref": "#/$defs/afterText",
          "description": "Replacement or inserted text."
        },
        "occurrence": {
          "$ref": "#/$defs/occurrence"
        },
        "new_block_id": {
          "$ref": "#/$defs/block_id",
          "description": "Identifier for the block to be inserted (must be unique within the document)."
        },
        "kind_code": {
          "$ref": "#/$defs/kind_code",
          "description": "kind_code for the inserted block."
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "description": "Canonical text content for the inserted block."
        },
        "message": {
          "type": "string",
          "description": "Human-readable suggestion or rationale."
        },
        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Optional, non-normative severity hint for suggest operations. Receivers MAY ignore."
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "op": {
                "const": "replace"
              }
            }
          },
          "then": {
            "required": [
              "before",
              "after"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "delete"
              }
            }
          },
          "then": {
            "required": [
              "before"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "insert_after"
              }
            }
          },
          "then": {
            "required": [
              "new_block_id",
              "kind_code",
              "text"
            ],
            "not": {
              "anyOf": [
                {"required": ["before"]},
                {"required": ["after"]}
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "op": {
                "const": "suggest"
              }
            }
          },
          "then": {
            "required": [
              "message"
            ],
            "not": {
              "anyOf": [
                {"required": ["before"]},
                {"required": ["after"]}
              ]
            }
          }
        }
      ]
    }
  }
}
